<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/main_EditText"
        android:hint="Enter text to send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/main_sndTxtBtn"
        android:text="Send Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_EditText"/>

    <Button
        android:id="@+id/main_chooseBtn"
        android:text="Choose Photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_sndTxtBtn"/>

    <Button
        android:id="@+id/main_sendPhotoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_chooseBtn"
        android:text="Send photo" />

    <Button
        android:id="@+id/main_takePhotoBtn"
        android:text="Take Photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_sendPhotoBtn"/>

    <TextView
        android:id="@+id/main_imageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_takePhotoBtn"

        android:text="Image to send:"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/main_displayImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_imageTitle"
        android:padding="8dp" />

</RelativeLayout>
