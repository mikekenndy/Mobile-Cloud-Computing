<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Main-getPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter phone number"/>

    <EditText
        android:id="@+id/Main-getMessage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/Main-getPhoneNumber"

        android:hint="Type message you wish to send"/>

    <Button
        android:id="@+id/Main-sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Main-getMessage"

        android:text="Send"
        android:textSize="20dp"/>

</RelativeLayout>