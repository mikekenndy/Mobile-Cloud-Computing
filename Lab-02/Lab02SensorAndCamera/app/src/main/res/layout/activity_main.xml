<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/s1_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orientation sensor::"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@id/s1_desc"/>

    <TextView
        android:id="@+id/s2_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light sensor:"
        android:layout_below="@+id/textview1"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/s2_desc"/>

    <TextView
        android:id="@+id/s3_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceleration sensor:"
        android:layout_below="@+id/textview2"/>

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/s3_desc"/>

</RelativeLayout>